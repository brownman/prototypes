run(){
  local runner=$1
  shift
  local args="${@:-}"
  local cmd
  local file="$dir_STEPPER/${runner}.sh"
  if [ -f "$file" ];then

    if [ "${args[@]}" = edit ];then
      cmd="gvim -f $file"
    else
      cmd="$file $args"
    fi
    echo "[cmd] $cmd"
    #  xcowsay "$cmd"
    eval "$cmd"
  else
    notify-send "no such file: $file" "$0"
  fi

}

